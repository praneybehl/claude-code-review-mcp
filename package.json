{
  "name": "claude-code-review-mcp",
  "version": "0.10.5",
  "description": "An MCP server for code reviews using OpenAI, Google, and Anthropic models",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "claude-code-review-mcp": "./dist/index.js"
  },
  "keywords": [
    "mcp",
    "code-review",
    "llm",
    "ai",
    "claude",
    "claude code",
    "openai",
    "gemini",
    "anthropic",
    "model context protocol"
  ],
  "author": "Praney Behl <@praneybehl>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/praneybehl/claude-code-review-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/praneybehl/claude-code-review-mcp/issues"
  },
  "homepage": "https://github.com/praneybehl/claude-code-review-mcp#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "repomix": "^0.3.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "@types/node": "^20.11.24",
    "bun-types": "^1.2.5",
    "typescript": "^5.3.3"
  }
}